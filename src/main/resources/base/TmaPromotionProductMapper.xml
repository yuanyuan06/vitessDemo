<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<mapper namespace="io.vitess.dao.sqlmap.TmaPromotionProductDao">
	<resultMap id="TmaPromotionProductResult" type="io.vitess.model.sqlmap.TmaPromotionProduct">
	</resultMap>
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="tmaPromotionProductColumns">
	    <![CDATA[
	        	ID as id,
	        	CREATE_TIME as createTime,
	        	QUANTITY_LEVEL as quantityLevel,
	        	VERSION as version,
	        	PRODUCT_ID as productId,
	        	PC_TAG_ID as pcTagId,
	        	PROMOTION_RULE_ID as promotionRuleId,
	        	SHOP_ID as shopId
	    ]]>
	</sql>

		<!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and mysql -->
		<insert id="insert" parameterType="io.vitess.model.sqlmap.TmaPromotionProduct"
				
			 flushCache="true">
		    <![CDATA[
		        INSERT INTO
		        t_ma_promotion_product (
		        id,
		        	CREATE_TIME ,
		        	QUANTITY_LEVEL ,
		        	VERSION ,
		        	PRODUCT_ID ,
		        	PC_TAG_ID ,
		        	PROMOTION_RULE_ID ,
		        	SHOP_ID 
		        ) VALUES (
		        #{id,javaType=java.lang.Long,jdbcType=BIGINT} ,
		        	#{createTime,javaType=java.util.Date,jdbcType=TIMESTAMP} ,
		        	#{quantityLevel,javaType=Integer,jdbcType=INTEGER} ,
		        	#{version,javaType=Integer,jdbcType=INTEGER} ,
		        	#{productId,javaType=Long,jdbcType=BIGINT} ,
		        	#{pcTagId,javaType=Long,jdbcType=BIGINT} ,
		        	#{promotionRuleId,javaType=Long,jdbcType=BIGINT} ,
		        	#{shopId,javaType=Long,jdbcType=BIGINT} 
		        )
		    ]]>

		</insert>
		

		<update id="update" parameterType="io.vitess.model.sqlmap.TmaPromotionProduct">
	    <![CDATA[
	        UPDATE t_ma_promotion_product SET
		        CREATE_TIME = #{createTime,javaType=java.util.Date,jdbcType=TIMESTAMP} ,
		        QUANTITY_LEVEL = #{quantityLevel,javaType=Integer,jdbcType=INTEGER} ,
		        VERSION = #{version,javaType=Integer,jdbcType=INTEGER} ,
		        PRODUCT_ID = #{productId,javaType=Long,jdbcType=BIGINT} ,
		        PC_TAG_ID = #{pcTagId,javaType=Long,jdbcType=BIGINT} ,
		        PROMOTION_RULE_ID = #{promotionRuleId,javaType=Long,jdbcType=BIGINT} ,
		        SHOP_ID = #{shopId,javaType=Long,jdbcType=BIGINT} 
	        WHERE 
		        ID = #{id} 
	    ]]>
		</update>
	   <delete id="delete" parameterType="java.lang.Long">
	    <![CDATA[
	        delete from t_ma_promotion_product where
		        ID = #{id} 
	    ]]>
	    </delete> 
	    
	     <delete id="deleteByIds" parameterType="list">
	    
	        delete from t_ma_promotion_product 
	        where id in
				<foreach item="item" index="index" collection="list" open="(" separator="," close=")">
#{item}				</foreach>	
	  
	    </delete>  
	         
	    <select id="findById" parameterType="java.lang.Long" resultMap="TmaPromotionProductResult" flushCache="false">
			select <include refid="tmaPromotionProductColumns" />
		    <![CDATA[
			    from t_ma_promotion_product 
		        where 
		        ID = #{id} 
		    ]]>
		</select>	
		<select id="getByIds" parameterType="list"  resultMap="TmaPromotionProductResult" flushCache="false">
			select <include refid="tmaPromotionProductColumns" />
			    from t_ma_promotion_product 
		        where id in
				<foreach item="item" index="index" collection="list" open="(" separator="," close=")">
#{item}				</foreach>					
		</select>	
	<sql id="tmaPromotionProductDynamicWhere">
		<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>
	       
				<if test="id!=null">
					and ID = #{id}
				</if>
	       
				<if test="createTime!=null">
					and CREATE_TIME = #{createTime}
				</if>
	       
				<if test="quantityLevel!=null">
					and QUANTITY_LEVEL = #{quantityLevel}
				</if>
	       
				<if test="version!=null">
					and VERSION = #{version}
				</if>
	       
				<if test="productId!=null">
					and PRODUCT_ID = #{productId}
				</if>
	       
				<if test="pcTagId!=null">
					and PC_TAG_ID = #{pcTagId}
				</if>
	       
				<if test="promotionRuleId!=null">
					and PROMOTION_RULE_ID = #{promotionRuleId}
				</if>
	       
				<if test="shopId!=null">
					and SHOP_ID = #{shopId}
				</if>
		</where>
	</sql>
	

	<select id="getCount" resultType="long">
        select count(*) from t_ma_promotion_product 
    </select>
    <select id="findListCountByQueryMap" resultType="long">
        select count(*) from t_ma_promotion_product 
		<include refid="tmaPromotionProductDynamicWhere"/>    
    </select>
    
    <select id="findListCountByParam" resultType="long">
        select count(*) from t_ma_promotion_product 
		<include refid="tmaPromotionProductDynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 offset,pageSize,lastRows 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="findListByQueryMapWithPage" resultMap="TmaPromotionProductResult">
    	select <include refid="tmaPromotionProductColumns" />
	    from t_ma_promotion_product 
		<include refid="tmaPromotionProductDynamicWhere"/>
		
    </select>
    
    <select id="findListByQueryMap" resultMap="TmaPromotionProductResult">
    	select <include refid="tmaPromotionProductColumns" />
	    from t_ma_promotion_product 
		<include refid="tmaPromotionProductDynamicWhere"/>
		
    </select>
    
    <select id="findListByParam" resultMap="TmaPromotionProductResult">
    	select <include refid="tmaPromotionProductColumns" />
	    from t_ma_promotion_product 
		<include refid="tmaPromotionProductDynamicWhere"/>
		
    </select>

	
</mapper>
