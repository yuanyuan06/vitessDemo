<mapper namespace="io.vitess.dao.sqlmap.TtdTradeDao">
	<resultMap id="TtdTradeResult" type="io.vitess.model.sqlmap.TtdTrade">
	</resultMap>
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="ttdTradeColumns">
	    <![CDATA[
	        	ID as id,
	        	PLATFORM_ORDER_CODE as platformOrderCode,
	        	PLATFORM_ORDER_CREATE_TIME as platformOrderCreateTime,
	        	ERP_SHOP_CODE as erpShopCode,
	        	IS_SPLIT as isSplit,
	        	ALIPAY_NO as alipayNo,
	        	ALIPAY_ACCOUNT as alipayAccount,
	        	ORDER_COUNT as orderCount,
	        	VERSION as version
	    ]]>
	</sql>

		<!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and mysql -->
		<insert id="insert" parameterType="io.vitess.model.sqlmap.TtdTrade"
				
			 flushCache="true">
		    <![CDATA[
		        INSERT INTO
		        t_td_trade (
		        id,
		        	PLATFORM_ORDER_CODE ,
		        	PLATFORM_ORDER_CREATE_TIME ,
		        	ERP_SHOP_CODE ,
		        	IS_SPLIT ,
		        	ALIPAY_NO ,
		        	ALIPAY_ACCOUNT ,
		        	ORDER_COUNT ,
		        	VERSION 
		        ) VALUES (
		        #{id,javaType=java.lang.Long,jdbcType=BIGINT} ,
		        	#{platformOrderCode,javaType=String,jdbcType=VARCHAR} ,
		        	#{platformOrderCreateTime,javaType=java.util.Date,jdbcType=TIMESTAMP} ,
		        	#{erpShopCode,javaType=Integer,jdbcType=INTEGER} ,
		        	#{isSplit,javaType=Integer,jdbcType=INTEGER} ,
		        	#{alipayNo,javaType=String,jdbcType=VARCHAR} ,
		        	#{alipayAccount,javaType=String,jdbcType=VARCHAR} ,
		        	#{orderCount,javaType=Integer,jdbcType=INTEGER} ,
		        	#{version,javaType=java.util.Date,jdbcType=TIMESTAMP} 
		        )
		    ]]>

		</insert>
		

		<update id="update" parameterType="io.vitess.model.sqlmap.TtdTrade">
	    <![CDATA[
	        UPDATE t_td_trade SET
		        PLATFORM_ORDER_CODE = #{platformOrderCode,javaType=String,jdbcType=VARCHAR} ,
		        PLATFORM_ORDER_CREATE_TIME = #{platformOrderCreateTime,javaType=java.util.Date,jdbcType=TIMESTAMP} ,
		        ERP_SHOP_CODE = #{erpShopCode,javaType=Integer,jdbcType=INTEGER} ,
		        IS_SPLIT = #{isSplit,javaType=Integer,jdbcType=INTEGER} ,
		        ALIPAY_NO = #{alipayNo,javaType=String,jdbcType=VARCHAR} ,
		        ALIPAY_ACCOUNT = #{alipayAccount,javaType=String,jdbcType=VARCHAR} ,
		        ORDER_COUNT = #{orderCount,javaType=Integer,jdbcType=INTEGER} ,
		        VERSION = #{version,javaType=java.util.Date,jdbcType=TIMESTAMP} 
	        WHERE 
		        ID = #{id} 
	    ]]>
		</update>
	   <delete id="delete" parameterType="java.lang.Long">
	    <![CDATA[
	        delete from t_td_trade where
		        ID = #{id} 
	    ]]>
	    </delete> 
	    
	     <delete id="deleteByIds" parameterType="list">
	    
	        delete from t_td_trade 
	        where id in
				<foreach item="item" index="index" collection="list" open="(" separator="," close=")">
#{item}				</foreach>	
	  
	    </delete>  
	         
	    <select id="findById" parameterType="java.lang.Long" resultMap="TtdTradeResult" flushCache="false">
			select <include refid="ttdTradeColumns" />
		    <![CDATA[
			    from t_td_trade 
		        where 
		        ID = #{id} 
		    ]]>
		</select>	
		<select id="getByIds" parameterType="list"  resultMap="TtdTradeResult" flushCache="false">
			select <include refid="ttdTradeColumns" />
			    from t_td_trade 
		        where id in
				<foreach item="item" index="index" collection="list" open="(" separator="," close=")">
#{item}				</foreach>					
		</select>	
	<sql id="ttdTradeDynamicWhere">
		<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>
	       
				<if test="id!=null">
					and ID = #{id}
				</if>
	       
				<if test="platformOrderCode!=null">
					and PLATFORM_ORDER_CODE = #{platformOrderCode}
				</if>
	       
				<if test="platformOrderCreateTime!=null">
					and PLATFORM_ORDER_CREATE_TIME = #{platformOrderCreateTime}
				</if>
	       
				<if test="erpShopCode!=null">
					and ERP_SHOP_CODE = #{erpShopCode}
				</if>
	       
				<if test="isSplit!=null">
					and IS_SPLIT = #{isSplit}
				</if>
	       
				<if test="alipayNo!=null">
					and ALIPAY_NO = #{alipayNo}
				</if>
	       
				<if test="alipayAccount!=null">
					and ALIPAY_ACCOUNT = #{alipayAccount}
				</if>
	       
				<if test="orderCount!=null">
					and ORDER_COUNT = #{orderCount}
				</if>
	       
				<if test="version!=null">
					and VERSION = #{version}
				</if>
		</where>
	</sql>
	

	<select id="getCount" resultType="long">
        select count(*) from t_td_trade 
    </select>
    <select id="findListCountByQueryMap" resultType="long">
        select count(*) from t_td_trade 
		<include refid="ttdTradeDynamicWhere"/>    
    </select>
    
    <select id="findListCountByParam" resultType="long">
        select count(*) from t_td_trade 
		<include refid="ttdTradeDynamicWhere"/>    
    </select>
    
