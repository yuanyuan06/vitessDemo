    -->
    <select id="findListByQueryMapWithPage" resultMap="TtdTradeResult">
    	select <include refid="ttdTradeColumns" />
	    from t_td_trade 
		<include refid="ttdTradeDynamicWhere"/>
		
    </select>
    
    <select id="findListByQueryMap" resultMap="TtdTradeResult">
    	select <include refid="ttdTradeColumns" />
	    from t_td_trade 
		<include refid="ttdTradeDynamicWhere"/>
		
    </select>
    
    <select id="findListByParam" resultMap="TtdTradeResult">
    	select <include refid="ttdTradeColumns" />
	    from t_td_trade 
		<include refid="ttdTradeDynamicWhere"/>
		
    </select>

	
